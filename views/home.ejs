<div class="row">
    <div class="col-md-6 col-sm-12">

        <% if(posts.length > 0) { %>
        <% for(post of posts) { %>
        <div class="card mb-5">
            <div class="card-header">
                <b><%= post.name %></b>
            </div>
            <img src="<%= post.contentImagePath %>" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="d-flex flex-row bd-highlight mb-2">
                    <div class="bd-highlight pr-2 material-icons">thumb_up_alt</div>
                    <div class="bd-highlight pr-2 material-icons">chat_bubble_outline</div>
                    <div class="bd-highlight pr-2 material-icons">near_me</div>
                </div>
                <p class="card-text"><b><%= post.name %></b>&nbsp;<%= post.caption %></p>
                <% if(post.comments.length > 0) { %>
                <b class="text-sm text-secondary">View all <%= post.comments.length %> comments</b>
                <% for(comment of post.comments) { %>
                <small style="display: block;">
                    <b>user:&nbsp;</b>
                    <span class="text-secondary"><%= comment.message %></span>
                </small>
                <% } %>
                <% } else { %>
                <b class="text-sm text-secondary">No comments</b>
                <% } %>
            </div>
            <ul class="list-group list-group-flush">
                <form action="/<%= post._id %>/comment" method="POST">
                    <div class="input-group">

                        <input type="text" class="form-control input-style" name="message" id="message"
                            placeholder="Add a comment...">
                        <div class="input-group-prepend">
                            <button type="submit"
                                class="input-group-text input-style material-icons text-info">send</button>
                        </div>
                    </div>
                </form>
            </ul>
        </div>
        <% } %>
        <% } else { %>
        <div class="alert alert-secondary" role="alert">
            No posts available. Add a new post.
        </div>
        <% } %>
    </div>
    <div class="col-md-4">
        <form class="card bg-transparent mb-3" action="/post" method="POST" >
            <div class="card-header">
                Add post
            </div>
            <input type="file" name="cover" id="cover" class="filepond" required />
            <div class="card-body">
                <div class="form-group">
                    <label for="name">name</label>
                    <input type="text" name="name" id="name" placeholder="name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="caption">caption</label>
                    <textarea name="caption" id="caption" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info float btn-sm" type="submit">Add Post</button>
                </div>
            </div>
        </form>
    </div>
</div>